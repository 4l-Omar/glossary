<p id="notice"><%= notice %></p>

<h1>Glossário de TI</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Referência</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @terms.each do |term| %>
      <tr>
        <td><%= term.name %></td>
        <td><%= term.description %></td>
        <td><%= term.url %></td>
        <td><%= link_to 'Editar', edit_term_path(term) %></td>
        <td><%= link_to 'Apagar', term, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Cadastrar novo termo', new_term_path, :class=>'btn btn-success' %>
